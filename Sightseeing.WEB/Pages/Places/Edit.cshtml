@page
@model SightSeeing.WEB.Pages.Places.EditModel

<h2>Edit Place</h2>

<form method="post">
    <input type="hidden" asp-for="Place.Id" />
    <div class="form-group">
        <label asp-for="Place.Name">Name</label>
        <input asp-for="Place.Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Place.Description">Description</label>
        <textarea asp-for="Place.Description" class="form-control"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>