@page "{id:int}"
@model SightSeeing.WEB.Pages.Places.EditModel
<h2>Редагувати місце</h2>
<form method="post">
    <input type="hidden" asp-for="Place.Id" />
    <div class="form-group">
        <label asp-for="Place.Name">Назва</label>
        <input asp-for="Place.Name" class="form-control" />
        <span asp-validation-for="Place.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Place.Description">Опис</label>
        <textarea asp-for="Place.Description" class="form-control"></textarea>
        <span asp-validation-for="Place.Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Place.Type">Тип</label>
        <input asp-for="Place.Type" class="form-control" />
        <span asp-validation-for="Place.Type" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Зберегти</button>
    <button type="button" onclick="window.history.back()" class="btn btn-secondary">Назад</button>
</form>