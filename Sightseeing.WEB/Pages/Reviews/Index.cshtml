@page
@model SightSeeing.WEB.Pages.Reviews.IndexModel

<h2>Reviews</h2>

<a asp-page="Create" class="btn btn-primary">Create New Review</a>

<table class="table">
    <thead>
    <tr>
        <th>ID</th>
        <th>Text</th>
        <th>Rating</th>
        <th>User ID</th>
        <th>Place ID</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var review in Model.Reviews)
    {
        <tr>
            <td>@review.Id</td>
            <td>@review.Text</td>
            <td>@review.Rating</td>
            <td>@review.UserId</td>
            <td>@review.PlaceId</td>
            <td>
                <a asp-page="Edit" asp-route-id="@review.Id" class="btn btn-secondary">Edit</a>
                <form asp-page-handler="Delete" asp-route-id="@review.Id" method="post" style="display:inline;">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>